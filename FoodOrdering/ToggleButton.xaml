<UserControl x:Class="FoodOrdering.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoodOrdering"
             mc:Ignorable="d" Height="22.5" Width="42">
    <UserControl.Resources>
        <Thickness x:Key="Thickness1">10,10,73,12</Thickness>
        <Thickness x:Key="Thickness2">73,10,10,12</Thickness>
    </UserControl.Resources>
    <Viewbox  Margin="0" Stretch="UniformToFill">
        <Grid HorizontalAlignment="Left" Height="65" Margin="0" VerticalAlignment="Top" Width="124" Background="#FFFDF6F6">
            <Rectangle HorizontalAlignment="Left" Stroke="Black" Width="123" RadiusY="29" RadiusX="29" Fill="#FF6464FA" Name="Back" Height="64" VerticalAlignment="Top"/>
            <Ellipse x:Name="Dot"  Height="65" Margin="58,0,0,0" Stroke="Black"  Width="66" Fill="#FFF7F7F7" VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>
        </Grid>

    </Viewbox>
</UserControl>
